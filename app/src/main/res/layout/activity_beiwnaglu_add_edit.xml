<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <include
        android:id="@+id/title_include"
        layout="@layout/top_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />
  <EditText
      android:id="@+id/etTitle"
      android:drawableLeft="@mipmap/biaoti"
      android:gravity="center_vertical"
      android:drawablePadding="@dimen/dp10"
      android:layout_width="match_parent"
      android:background="@null"
      android:hint="请输入备忘录标题"
      android:textColorHint="#999999"
      android:textColor="#101010"
      android:layout_marginHorizontal="20dp"
      android:layout_marginTop="30dp"
      android:paddingVertical="15dp"
      android:paddingHorizontal="@dimen/dp_10"
      android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/etContent"
        android:layout_width="match_parent"
        android:background="@null"
        android:hint="请输入备忘录描述"
        android:textColorHint="#999999"
        android:gravity="center_vertical"
        android:drawablePadding="@dimen/dp10"
        android:drawableLeft="@mipmap/neirong"
        android:textColor="#101010"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:paddingVertical="15dp"
        android:paddingHorizontal="@dimen/dp_10"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/etLocation"
        android:layout_width="match_parent"
        android:background="@null"
        android:hint="请输入地址"
        android:gravity="center_vertical"
        android:drawablePadding="@dimen/dp10"
        android:drawableLeft="@mipmap/dizhi"
        android:textColorHint="#999999"
        android:textColor="#101010"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:paddingVertical="15dp"
        android:paddingHorizontal="@dimen/dp_10"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="match_parent"
        android:background="@null"
        android:textColorHint="#999999"
        android:textColor="#101010"
        android:gravity="center_vertical"
        android:drawablePadding="@dimen/dp10"
        android:drawableLeft="@mipmap/shijian23"
        android:hint="请选择备忘录提示时间"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:paddingVertical="15dp"
        android:paddingHorizontal="@dimen/dp_10"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btAdd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/blue_button_shape"
        android:text="添加"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="@dimen/dp_10"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/dp_40"
        android:textColor="@color/white"
       />
    <Button
        android:id="@+id/btAddSys"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/blue_button_shape"
        android:text="启动系统日历进行编辑事件"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="@dimen/dp_10"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/dp_40"
        android:textColor="@color/white"
       />
</LinearLayout>