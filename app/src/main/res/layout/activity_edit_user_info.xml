<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dp_15">

    <include
        android:id="@+id/top"
        layout="@layout/top_include" />
<androidx.core.widget.NestedScrollView
    android:layout_below="@+id/top"
    android:layout_above="@+id/llBottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <com.example.temperatureandhumiditytesting.view.CustomShapeImageView
            android:id="@+id/ivHead"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_40"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg_zhanweitu"
            app:onlyDrawBorder="false"
            app:roundRadius="@dimen/dp_4"
            app:shape="rectangle" />
        <TextView
            android:drawablePadding="@dimen/dp10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:text="用户手机号"
            android:textColor="@color/_101010"
            android:textSize="@dimen/dp_14"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvPhone"
            android:drawablePadding="@dimen/dp5"
            android:textSize="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_15"
            style="@style/text_14_101010_style"
            android:text="性别" />
        <RelativeLayout
            android:id="@+id/rlChooseSex"
            android:layout_marginTop="@dimen/dp10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">


            <TextView
                android:textSize="@dimen/dp_17"
                android:layout_centerVertical="true"
                style="@style/text_14_101010_style"
                android:text="性别" />
            <TextView
                android:id="@+id/tvSex"
                android:drawablePadding="@dimen/dp5"
                android:textSize="@dimen/dp_16"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                style="@style/text_14_101010_style"
                android:drawableRight="@mipmap/icon_jiantou"
                android:text="性别" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlChooseAge"
            android:layout_marginTop="@dimen/dp10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">

            <TextView
                android:textSize="@dimen/dp_17"
                android:layout_centerVertical="true"
                style="@style/text_14_101010_style"
                android:text="年龄" />
            <TextView
                android:id="@+id/tvAge"
                android:drawablePadding="@dimen/dp5"
                android:textSize="@dimen/dp_16"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                style="@style/text_14_101010_style"
                android:drawableRight="@mipmap/icon_jiantou"
                android:text="性别" />
        </RelativeLayout>

        <TextView
            android:drawablePadding="@dimen/dp10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:text="用户简介"
            android:textColor="@color/_101010"
            android:textSize="@dimen/dp_14"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/etJianJie"
            style="@style/text_14_101010_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:background="@drawable/gray_biankuang_4_shape"
            android:hint="请输入用户简介"
            android:paddingHorizontal="@dimen/dp_15"
            android:paddingVertical="@dimen/dp_15"
            android:textColorHint="@color/gray3"
            android:textSize="@dimen/dp_12" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_height="@dimen/dp_50">

            <TextView
                android:textSize="@dimen/dp_17"
                android:layout_centerVertical="true"
                style="@style/text_14_101010_style"
                android:text="用户ID" />
            <TextView
                android:id="@+id/tvId"
                android:drawablePadding="@dimen/dp5"
                android:textSize="@dimen/dp_16"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                style="@style/text_14_101010_style"
                android:text="1" />
        </RelativeLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
  <LinearLayout
      android:id="@+id/llBottom"
      android:layout_marginVertical="@dimen/dp10"
      android:layout_alignParentBottom="true"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <Button
          android:id="@+id/btDelete"
          android:layout_width="match_parent"
          android:text="删除"
          android:layout_weight="1"
          android:textColor="@color/white"
          android:background="@drawable/gray_button_shape"
          android:layout_height="@dimen/dp_35"/>
      <Button
          android:id="@+id/btSave"
          android:layout_width="match_parent"
          android:text="保存"
          android:layout_marginLeft="@dimen/dp_30"
          android:layout_weight="1"
          android:textColor="@color/white"
          android:background="@drawable/blue_button_shape"
          android:layout_height="@dimen/dp_35"/>
  </LinearLayout>
</RelativeLayout>