<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top_include" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dp_15">

        <LinearLayout
            android:id="@+id/llChangePsw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:layout_weight="1"
                android:textColor="@color/_101010"
                android:textSize="@dimen/dp_15" />
            <ImageView
                android:layout_width="@dimen/dp_15"
                android:src="@mipmap/icon_jiantou"
                android:layout_height="@dimen/dp_15"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/gray3"
            android:layout_height="1px"/>

        <LinearLayout
            android:id="@+id/llChangeColor"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改主题颜色"
                android:layout_weight="1"
                android:textColor="@color/_101010"
                android:textSize="@dimen/dp_15" />
            <ImageView
                android:layout_width="@dimen/dp_15"
                android:src="@mipmap/icon_jiantou"
                android:layout_height="@dimen/dp_15"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/gray3"
            android:layout_height="1px"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检测更新"
                android:layout_weight="1"
                android:textColor="@color/_101010"
                android:textSize="@dimen/dp_15" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已是最新"
                android:textColor="@color/gray3"
                android:textSize="@dimen/dp_14" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/gray3"
            android:layout_height="1px"/>
        <LinearLayout
            android:id="@+id/llBanQuan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版权声明"
                android:layout_weight="1"
                android:textColor="@color/_101010"
                android:textSize="@dimen/dp_15" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/gray3"
            android:layout_height="1px"/>
        <LinearLayout
            android:id="@+id/llYongHu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户协议"
                android:layout_weight="1"
                android:textColor="@color/_101010"
                android:textSize="@dimen/dp_15" />
            <ImageView
                android:layout_width="@dimen/dp_15"
                android:src="@mipmap/icon_jiantou"
                android:layout_height="@dimen/dp_15"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/gray3"
            android:layout_height="1px"/>
        <LinearLayout
            android:id="@+id/llYinSi"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="隐私协议"
                android:layout_weight="1"
                android:textColor="@color/_101010"
                android:textSize="@dimen/dp_15" />
            <ImageView
                android:layout_width="@dimen/dp_15"
                android:src="@mipmap/icon_jiantou"
                android:layout_height="@dimen/dp_15"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/gray3"
            android:layout_height="1px"/>
        <LinearLayout
            android:id="@+id/llZhuXiao"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注销账号"
                android:layout_weight="1"
                android:textColor="@color/_101010"
                android:textSize="@dimen/dp_15" />
            <ImageView
                android:layout_width="@dimen/dp_15"
                android:src="@mipmap/icon_jiantou"
                android:layout_height="@dimen/dp_15"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/gray3"
            android:layout_height="1px"/>
    </LinearLayout>
    <Button
        android:id="@+id/btExit"
        android:layout_marginHorizontal="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_width="match_parent"
        android:background="@drawable/blue_button_shape"
        android:textSize="@dimen/dp_14"
        android:textColor="@color/white"
        android:text="退出登录"
        android:layout_height="@dimen/dp_45"/>
</LinearLayout>