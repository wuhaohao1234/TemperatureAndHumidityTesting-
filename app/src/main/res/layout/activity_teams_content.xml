<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dp_15">

    <include layout="@layout/top_include" />
    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnableAutoLoadMore="false"
        app:srlPrimaryColor="@color/white">

        <com.scwang.smart.refresh.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlAccentColor="@color/red"
            app:srlPrimaryColor="@color/white" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp20"
                    android:layout_height="wrap_content">
                    <com.example.temperatureandhumiditytesting.view.CustomShapeImageView
                        android:id="@+id/ivHead"
                        android:layout_width="@dimen/dp_90"
                        android:layout_height="@dimen/dp_90"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/bg_zhanweitu"
                        app:onlyDrawBorder="false"
                        app:roundRadius="@dimen/dp_4"
                        app:shape="rectangle" />
                    <TextView
                        android:id="@+id/tvTitle"
                        android:drawablePadding="@dimen/dp5"
                        android:textSize="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        style="@style/text_14_101010_style"
                        android:text="昵称" />
                    <TextView
                        android:id="@+id/tvState"
                        android:drawablePadding="@dimen/dp5"
                        android:textSize="@dimen/dp_14"
                        android:layout_weight="1"
                        android:textColor="@color/teal_200"
                        android:gravity="right"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        style="@style/text_14_101010_style"
                        android:text="昵称" />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">


                    <TextView
                        android:textSize="@dimen/dp_17"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        style="@style/text_14_101010_style"
                        android:text="队伍创建者" />
                    <TextView
                        android:id="@+id/tvCreateName"
                        android:drawablePadding="@dimen/dp5"
                        android:textSize="@dimen/dp_14"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        style="@style/text_14_101010_style"
                        android:text="LOL" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rlChooseSex"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">


                    <TextView
                        android:textSize="@dimen/dp_17"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        style="@style/text_14_101010_style"
                        android:text="学习类型" />
                    <TextView
                        android:id="@+id/tvGame"
                        android:drawablePadding="@dimen/dp5"
                        android:textSize="@dimen/dp_14"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        style="@style/text_14_101010_style"
                        android:text="LOL" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">


                    <TextView
                        android:textSize="@dimen/dp_17"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        style="@style/text_14_101010_style"
                        android:text="备注" />
                    <TextView
                        android:id="@+id/tvContent"
                        android:drawablePadding="@dimen/dp5"
                        android:textSize="@dimen/dp_14"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        style="@style/text_14_101010_style"
                        android:text="LOL" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rlChooseAge"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">

                    <TextView
                        android:textStyle="bold"
                        android:textSize="@dimen/dp_17"
                        android:layout_centerVertical="true"
                        style="@style/text_14_101010_style"
                        android:text="学习开始时间" />
                    <TextView
                        android:id="@+id/tvStartTime"
                        android:textSize="@dimen/dp_14"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        style="@style/text_14_101010_style"
                        android:text="性别" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlJianJie"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">

                    <TextView
                        android:textSize="@dimen/dp_17"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        style="@style/text_14_101010_style"
                        android:text="队伍创建时间" />
                    <TextView
                        android:id="@+id/tvCreateTime"
                        android:drawablePadding="@dimen/dp5"
                        android:textSize="@dimen/dp_14"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        style="@style/text_14_101010_style"
                        android:text="您还有写简介呢" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">

                    <TextView
                        android:textSize="@dimen/dp_17"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        style="@style/text_14_101010_style"
                        android:text="学习地点" />
                    <TextView
                        android:id="@+id/tvId"
                        android:drawablePadding="@dimen/dp5"
                        android:textSize="@dimen/dp_16"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        style="@style/text_14_101010_style"
                        android:text="1" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@color/_888888"
                    android:layout_height="1px"/>

                <TextView
                    android:textSize="@dimen/dp_17"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    style="@style/text_14_101010_style"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="成员信息" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_marginTop="@dimen/dp10"
                        android:scrollbars="none"
                        android:overScrollMode="never"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <Button
                    android:id="@+id/btAddTeam"
                    android:layout_width="wrap_content"
                    android:background="@drawable/yifu_selector"
                    android:text="申请该队"
                    android:paddingHorizontal="@dimen/dp_30"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_13"
                    android:button="@null"
                    android:layout_marginVertical="@dimen/dp_15"
                    android:layout_height="@dimen/dp_45"/>
            </LinearLayout>
        </ScrollView>

    </com.scwang.smart.refresh.layout.SmartRefreshLayout>



    
</LinearLayout>