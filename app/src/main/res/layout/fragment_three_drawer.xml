<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/dp_200">

        <com.example.temperatureandhumiditytesting.view.CustomShapeImageView
            android:id="@+id/ciBeiJng"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg_zhanweitu"
            app:leftBottomRadius="@dimen/dp_40"
            app:onlyDrawBorder="false"
            app:rightBottomRadius="@dimen/dp_40"
            app:shape="rectangle" />

        <com.example.temperatureandhumiditytesting.view.CustomShapeImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:background="@drawable/mine_top_bg_shape"
            android:scaleType="centerCrop"
            app:leftBottomRadius="@dimen/dp_40"
            app:onlyDrawBorder="false"
            app:rightBottomRadius="@dimen/dp_40"
            app:shape="rectangle" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_35"
        android:layout_marginTop="140dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.example.temperatureandhumiditytesting.view.CustomShapeImageView
            android:id="@+id/ivHead"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg_zhanweitu"
            app:onlyDrawBorder="false"
            app:roundRadius="@dimen/dp_4"
            app:shape="rectangle" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/_101010"
                android:textSize="@dimen/dp_17"
                android:text="@string/app_name"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvJianJie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="你还没有写简介呢"
                android:textColor="@color/_101010"
                android:textSize="@dimen/dp_13" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llInfo"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_50"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlCollection"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="我的帖子"
                android:textColor="@color/_101010"
                android:textSize="@dimen/dp_15" />

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_jiantou" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlFriendShenQing"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp20"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="好友申请"
                android:textColor="@color/_101010"
                android:textSize="@dimen/dp_15" />

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_jiantou" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlFriend"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp20"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="我的好友"
                android:textColor="@color/_101010"
                android:textSize="@dimen/dp_15" />

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_jiantou" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlFaBu"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp20"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="我的组队"
                android:textColor="@color/_101010"
                android:textSize="@dimen/dp_15" />

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_jiantou" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlYiJian"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp20"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="意见反馈"
                android:textColor="@color/_101010"
                android:textSize="@dimen/dp_15" />

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_jiantou" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlSetting"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp20"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="设置"
                android:textColor="@color/_101010"
                android:textSize="@dimen/dp_15" />

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_jiantou" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlCall"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp20"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="联系我们"
                android:textColor="@color/_101010"
                android:textSize="@dimen/dp_15" />

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_jiantou" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlShare"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp20"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="推荐APP"
                android:textColor="@color/_101010"
                android:textSize="@dimen/dp_15" />

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_jiantou" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlAbout"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp20"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="关于"
                android:textColor="@color/_101010"
                android:textSize="@dimen/dp_15" />

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_jiantou" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>