<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="?android:attr/selectableItemBackground"
    android:padding="6dp"
    android:layout_marginHorizontal="@dimen/dp10"
    android:paddingHorizontal="@dimen/dp_15"
   >

    <TextView
        android:id="@+id/week_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:visibility="invisible"
        android:textColor="#101010"
        android:layout_centerVertical="true"
        android:textSize="@dimen/dp_15"
        />

    <TextView
        android:id="@+id/date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/week_text_view"
        android:layout_alignBottom="@id/week_text_view"
        android:textColor="#101010"
        android:textSize="@dimen/dp_15"
        android:text="08.07" />

    <ImageView
        android:id="@+id/weather_icon_image_view"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:visibility="gone"

        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@id/date_text_view"
        android:src="@mipmap/logo" />

    <TextView
        android:id="@+id/weather_text_view"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:gravity="center"
        android:lines="1"
        android:textColor="#101010"
        android:textSize="@dimen/dp_13"
        android:text="多云转晴" />

    <TextView
        android:id="@+id/temp_min_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:lines="1"
        android:textColor="#101010"
        android:textSize="@dimen/dp_13"
        tools:text="13°" />


</RelativeLayout>