<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/sanshi"
        android:text="温馨提示"
        android:id="@+id/tv_title"
        android:textColor="@color/_101010"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_tishi_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:text="男生和女生的衣服分类、智能搭配会有差异"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/test_color"
        android:textSize="@dimen/dp_13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="@dimen/sishi"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_quxiao"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/dp_30"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:background="@drawable/gray_button_shape"
            android:gravity="center"

            android:text="取消"

            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_queren"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/dp_30"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="确认"
            android:background="@drawable/blue_button_shape"
            android:textSize="15dp" />

    </LinearLayout>
    <TextView
        android:layout_marginBottom="@dimen/dp20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定后不可以修改"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/red"
        android:textSize="@dimen/dp_12" />
</LinearLayout>